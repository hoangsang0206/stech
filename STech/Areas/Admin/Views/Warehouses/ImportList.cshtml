@model WarehouseFilterVM

@{
    ViewData["Title"] = "Danh sách phiếu nhập - STech Admin";
    ViewData["PageTitle"] = "Danh sách phiếu nhập";

    IEnumerable<Warehouse> warehouses = Model.Warehouses;
    IEnumerable<Supplier> suppliers = Model.Suppliers;
}

<section class="page-wrapper">
    <div class="d-flex gap-2 align-items-center">
        <a class="page-btn btn-green" href="/admin/warehouses/import/create">
            <i class="fa-solid fa-plus"></i>
            <span>Tạo phiếu nhập</span>
        </a>
    </div>
    
    <div class="d-flex align-items-center gap-2 mt-2">
        <div class="page-input">
            <select class="filter-select-warehouse">
                <option value="">Tìm theo kho</option>
                @foreach (Warehouse warehouse in warehouses)
                {
                    <option value="@warehouse.WarehouseId">@warehouse.WarehouseName</option>
                }
            </select>
        </div>
        
        <div class="page-input">
            <select class="filter-select-supplier">
                <option value="">Tìm theo NCC</option>
                @foreach (Supplier supplier in suppliers)
                {
                    <option value="@supplier.SupplierId">@supplier.SupplierName</option>
                }
            </select>
        </div>
        
        <div class="page-input text-nowrap date-range-picker" style="padding: .5rem .7rem 0.5rem .7rem">
            <i class="fa fa-calendar"></i>&nbsp;
            <span></span> <i class="fa fa-caret-down"></i>
        </div>
        
        <div class="page-input">
            <input placeholder=" Tìm theo mã SP"/>
        </div>
        
        <div class="page-input">
            <input placeholder="Tìm theo mã NV"/>
        </div>
        
        <div class="page-input">
            <input placeholder="Tìm theo mã phiếu"/>
        </div>
        
        <div>
            <button class="page-btn">
                <i class="fa-solid fa-magnifying-glass"></i>
            </button>
        </div>
    </div>
    
</section>